<% layout('layouts/boilerplate') %>

<div class="row">
    <!-- Campground detail section uses 6 column space -->
    <div class="col-6">
        <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">Submitted by: <%= campground.author.username %></li>
                <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>
            <!-- Displays these buttons only if the campground author is the user logged in -->
            <% if (currentUser && campground.author._id.equals(currentUser._id)) { %>
                <div class="card-body">
                    <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info">Edit</a>
                    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" class="d-inline" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            <% } %>
            
        </div>
    </div>
    <!-- Review detail section use the remaining 6 column space-->
    <div class="col-6">
        <% if (currentUser) { %>
            <div class="mb-3">
                <h1>Leave a Review</h1>
                <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="validated-form" novalidate>
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range mb-3" min="1" max="5" id="rating" name="review[rating]">
                    <label for="body" class="form-label">Review</label>
                    <textarea type="text" class="form-control mb-3" id="body" cols="30" rows="3" name="review[body]" placeholder="Enter review..." required></textarea>
                        <div class="invalid-feedback">
                            Field can not be blank.
                        </div> 
                    <button class="btn btn-success">Submit Review</button>
                </form>
            </div>
        <% } %>
        <h1>Reviews</h1>
        <% for(let review of campground.reviews) { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Rating: <%= review.rating %></h5>
                    <h6 class="card-subtitle mb-2 text-muted">by: <%= review.author.username %></p>
                    <p class="card-text"><%= review.body %></p>
                    <% if (currentUser && review.author._id.equals(currentUser._id)) { %>
                        <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
        <% } %> 
    </div>
</div>